{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Claude Whisperer",
    "version": "0.6.0",
    "identifier": "com.isirux.claude-whisperer",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build && npm run sidecar:build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Claude Whisperer",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "decorations": true,
                "transparent": false
            },
            {
                "label": "overlay",
                "title": "Recording",
                "url": "/overlay",
                "width": 380,
                "height": 100,
                "center": false,
                "decorations": false,
                "transparent": false,
                "alwaysOnTop": true,
                "visible": false,
                "skipTaskbar": true,
                "resizable": false,
                "focus": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [
            "sidecar/dist/",
            "sidecar/node_modules/@anthropic-ai/"
        ],
        "windows": {
            "wix": {
                "template": "wix/main.wxs"
            }
        }
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}